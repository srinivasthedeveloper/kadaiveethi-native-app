<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item> <!-- transparent status bar -->
        <item name="android:windowTranslucentNavigation">true</item> <!-- transparent status bar -->
        <item name="android:windowLightNavigationBar">true</item> <!-- set navigation icon < [] () color to black -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDisablePreview">true</item> <!-- ADD THIS to disable white splash on app launch -->
        <item name="android:windowIsTranslucent">true</item> <!-- transparent splash screen -->

        <item name="android:forceDarkAllowed">false</item> <!-- disables dark theme -->
        <item name="android:textColor">#000000</item>
        <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
        <item name="android:windowBackground">#ffffff</item>
    </style>

    <!-- splash screen theme. -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item> <!-- transparent status bar -->
        <item name="android:windowTranslucentNavigation">true</item> <!-- transparent status bar -->
        <item name="android:windowLightNavigationBar">false</item> <!-- set navigation icon < [] () color to black -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="android:forceDarkAllowed">false</item> <!-- disables dark theme -->
        <item name="android:background">@drawable/background_splash</item>  <!-- windowBackground will give some glitch in splashscreen -->
        <item name="colorPrimaryDark">@color/green</item>
    </style>

</resources>
